{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./dist",
		"outDir": "dist",
		"target": "ES2020",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"module": "ES2020",
		"baseUrl": ".",
		"resolveJsonModule": true,
		"jsx": "react",
		"lib": ["es2020", "dom"]
	},
	"paths": {
		"*": ["node_modules/*"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
